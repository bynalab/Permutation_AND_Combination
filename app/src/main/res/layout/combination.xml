<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/n"
        android:layout_width="131dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="number"
        android:hint="n"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="61dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/c"
        android:layout_width="94dp"
        android:layout_height="160dp"
        android:text="C"
        android:textColor="@android:color/holo_green_light"
        android:textColorLink="@android:color/holo_green_light"
        android:textSize="150sp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/n" />

    <EditText
        android:id="@+id/r"
        android:layout_width="131dp"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="number"
        android:hint="r"
        android:textAlignment="center"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/c"
        app:layout_constraintHorizontal_bias="0.685" />

    <Button
        android:id="@+id/solve"
        android:layout_width="157dp"
        android:layout_height="62dp"
        android:text="Solve"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/r"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/output"
        android:layout_width="222dp"
        android:layout_height="50dp"
        android:text="output"
        android:textSize="25sp"
        android:textColor="@android:color/holo_green_light"
        android:textColorLink="@android:color/holo_green_light"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/courtesy"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/solve" />

    <TextView
        android:id="@+id/courtesy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designed by Bynalab"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.504" />


</android.support.constraint.ConstraintLayout>