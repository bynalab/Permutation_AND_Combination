<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bynalab.pc.MainActivity">


    <TextView
        android:id="@+id/title"
        android:layout_width="243dp"
        android:layout_height="41dp"
        android:text="PERMUTATION AND COMBINATION"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="98dp"
        app:layout_constraintHorizontal_bias="0.504" />

    <Button
        android:id="@+id/factorial"
        android:layout_width="145dp"
        android:layout_height="83dp"
        android:text="FACTORIAL ( ! )"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <Button
        android:id="@+id/permutation"
        android:layout_width="145dp"
        android:layout_height="83dp"
        android:text="PERMUTATION"
        android:layout_marginLeft="46dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/factorial" />

    <Button
        android:id="@+id/combination"
        android:layout_width="145dp"
        android:layout_height="83dp"
        android:text="COMBINATION"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/permutation"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/factorial" />

    <TextView
        android:id="@+id/courtesy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designed by Bynalab"
        android:layout_marginTop="240dp"
        app:layout_constraintTop_toBottomOf="@+id/combination"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>
